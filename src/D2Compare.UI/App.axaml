<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="D2Compare.App"
             RequestedThemeVariant="Light">
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="IconForegroundBrush" Color="Black" />
                    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="White" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="IconForegroundBrush" Color="White" />
                    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1E1E1E" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <FontFamily x:Key="MonoFont">avares://D2Compare/Assets/Fonts#JetBrains Mono</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>

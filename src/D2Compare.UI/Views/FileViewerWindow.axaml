<Window
    x:Class="D2Compare.Views.FileViewerWindow"
    xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="1000" Height="600"
    Background="{DynamicResource WindowBackgroundBrush}"
    WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem x:Name="SaveMenuItem" Header="_Save" InputGesture="Ctrl+S" />
                <MenuItem x:Name="SaveAsMenuItem" Header="Save _As..." InputGesture="Ctrl+Shift+S" />
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem x:Name="LockFirstMenuItem" Header="_Lock First Column" />
            </MenuItem>
            <MenuItem Header="_Copy">
                <MenuItem x:Name="CopyCellsMenuItem" Header="Copy _Cell(s)" InputGesture="Ctrl+C" />
                <MenuItem x:Name="CopyRowsMenuItem" Header="Copy _Row(s)" InputGesture="Ctrl+Shift+C" />
                <Separator />
                <MenuItem x:Name="IncludeHeadersMenuItem" Header="_Include Headers" Icon="{x:Null}" />
            </MenuItem>
        </Menu>
        <Grid
            Margin="8,4"
            ColumnDefinitions="Auto,*,Auto" DockPanel.Dock="Top">
            <StackPanel
                Grid.Column="0"
                VerticalAlignment="Center"
                Orientation="Horizontal" Spacing="8">
                <TextBox
                    x:Name="SearchBox"
                    Width="150"
                    Padding="8,8"
                    Watermark="Search + Enter" />
                <TextBlock
                    VerticalAlignment="Center"
                    Text="Search in:" />
                <ComboBox
                    x:Name="SearchColumnCombo"
                    Padding="8,8"
                    SelectedIndex="0" />
            </StackPanel>
            <TextBlock
                Grid.Column="2"
                x:Name="EncodingLabel"
                VerticalAlignment="Center"
                FontSize="11" Foreground="Gray"
                IsVisible="True" />
        </Grid>
        <DataGrid
            x:Name="Grid"
            AutoGenerateColumns="False" BorderThickness="0"
            CanUserReorderColumns="True" CanUserResizeColumns="True"
            CanUserSortColumns="False" ClipboardCopyMode="None"
            FontFamily="{StaticResource MonoFont}"
            FrozenColumnCount="1" GridLinesVisibility="All"
            IsReadOnly="False" SelectionMode="Extended">
            <DataGrid.Styles>
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Normal" />
                </Style>
                <Style Selector="DataGridCell">
                    <Setter Property="FontWeight" Value="Normal" />
                </Style>
                <Style Selector="DataGridCell.frozen">
                    <Setter Property="Background" Value="{DynamicResource FrozenColumnBrush}" />
                </Style>
            </DataGrid.Styles>
        </DataGrid>
    </DockPanel>
</Window>

<Window
    x:Class="D2Compare.Views.UpdateDialog"
    xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctxt="clr-namespace:ColorTextBlock.Avalonia;assembly=ColorTextBlock.Avalonia"
    xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
    MinWidth="400" MaxWidth="700" MaxHeight="600"
    SizeToContent="WidthAndHeight" CanResize="False"
    Background="{DynamicResource WindowBackgroundBrush}"
    WindowStartupLocation="CenterOwner">
    <DockPanel Margin="16">
        <TextBlock
            DockPanel.Dock="Top"
            FontSize="16" FontWeight="SemiBold"
            Text="{Binding Title}" />
        <Border
            Margin="0,8,0,0"
            DockPanel.Dock="Top"
            Padding="8"
            Background="{DynamicResource PanelBackgroundBrush}"
            BorderBrush="Gray" BorderThickness="1">
            <md:MarkdownScrollViewer
                x:Name="ChangelogViewer"
                Markdown="">
                <md:MarkdownScrollViewer.Styles>
                    <Style Selector="ctxt|CHyperlink">
                        <Setter Property="Foreground" Value="{DynamicResource LinkBrush}" />
                    </Style>
                    <Style Selector="ctxt|CHyperlink:pointerover">
                        <Setter Property="Foreground" Value="{DynamicResource LinkHoverBrush}" />
                    </Style>
                </md:MarkdownScrollViewer.Styles>
            </md:MarkdownScrollViewer>
        </Border>
        <StackPanel
            Margin="0,12,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal" Spacing="8">
            <Button
                x:Name="CancelButton"
                Padding="16,6"
                Content="Cancel" />
            <Button
                x:Name="UpdateButton"
                Padding="16,6"
                Classes="accent"
                Content="Update" />
        </StackPanel>
    </DockPanel>
</Window>
